<ul>
<% subcategories.each do |sub| %>
  <div class="row">
    <div class="col-md-4">
      <li>
      <p> <%= sub.name %>  <%= link_to "Edit", edit_category_path(sub), :class => "btn btn-primary btn-xs" %> <%= link_to "Delete", sub, :method => 'delete', :class => "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %> </p>
    </div>
  </div>
  <%= render partial: 'subcategory', locals: {subcategories: sub.subcategories} if sub.subcategories.present? %>
</li>
<% end %>
</ul>
