<% provide(:title, 'Listing Categories') %>
<h1>Listing Categories</h1>

<% unless @categories.nil? %>
  <% @categories.each do |category| %>
    <ul>
    <% if category.parent_id.blank? %>
      <div class = "row">
        <div class = "col-md-4">
        <li>
          <p><%= category.id %> <%= category.name %> <%= category.parent_id %> <%= link_to "Edit", edit_category_path(category), :class => "btn btn-primary btn-xs" %>  <%= link_to "Delete", category, :method => 'delete', :class => "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %> </p>
        </div>
      </div>
      <%= render partial: 'subcategory', locals: {subcategories: category.subcategories} if category.subcategories.present? %>
    </li>
    <% end %>
  </ul>
  <% end %>
<% end %>
<%= link_to 'New Category', new_category_path %>
