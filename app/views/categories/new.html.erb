<% provide(:title, 'New Category') %>
<h1>New Category</h1>
<% @mastercats = Category.includes(:subcategories) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category) do |f| %>
      <%= render 'shared/categerror_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <div class="row"> 
        <h2> Select Master/Parent Category </h2>
        <select name="category[parent_id]", class="form-control">
        <option value =""></option>
        <% unless @mastercats.nil? %>
          <% @mastercats.each do |master| %>
            <% if master.parent_id.nil? %>
              <option value="<%= master.id %>"><%= master.name %></option>
              <%= render partial: 'newsubcategory', locals: {subcategories: master.subcategories} if master.subcategories.present? %>
            <% end %>
          <% end %>
        <% end %>
      </div> 
      <%= f.submit "Create new category", class: "btn btn-primary" %>
    <% end %>
  </div>
  <%= link_to 'Back', categories_path %>
</div>
