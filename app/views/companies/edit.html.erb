<% provide(:title, "Edit Company") %>
<h1>Editing Company</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @company, defaults: { input_html: { class: 'form-control' } } do |f| %>
      <%= render 'shared/comperror_messages' %>

      <%= f.input :name %>

      <%= f.input :contact_name %>

      <%= f.input :phone %>

      <%= f.input :email %>

      <%= f.input :address_1 %>

      <%= f.input :address_2 %>

      <%= f.input :city %>

      <%= f.input :region %>

      <%= f.input :zip %>

      <%= f.input :country %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= link_to 'Show', @company %> |
<%= link_to 'Back', companies_path %>
