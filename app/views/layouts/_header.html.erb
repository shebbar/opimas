<header id="header">
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<!-- header-holder -->
				<div class="header-holder">
					<!-- logo of the page -->
					<div class="logo">
						<a href="#">
						<span data-picture="" data-alt="Opimas: We begin with an understanding">
							<span data-src="logo.png"><%= link_to image_tag("logo.png", :alt => "Opimas: We begin with an understanding") %></span>
							<span data-src="logo-2x.png" data-width="159" data-height="44" data-media="(-webkit-min-device-pixel-ratio:1.5), (min-resolution:1.5dppx)"></span>
							<span data-src="logosmall-2x.png" data-width="159" data-height="44" data-media="(max-width:767px) and (-webkit-min-device-pixel-ratio:1.5), (max-width:767px) and (min-resolution:144dpi)"></span>
							<!--[if (lt IE 9) & (!IEMobile)]>
								<span data-src="logo.png"></span>
							<![endif]-->
							<!-- Fallback content for non-JS browsers. Same img src as the initial, unqualified source element. -->
							<noscript><%= link_to image_tag("logo.png", :width => "159", :height => "44", :alt => "Opimas: research and consulting reinvented") %></noscript>
						</span>
						</a>
					</div>
<!-- main navbar -->
					<nav class="navbar navbar-default pull-right">
						<!-- Brand and toggle get grouped for better mobile display -->
						<div class="navbar-header">
							<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
							</button>
						</div>
						<!-- Collect nav links, forms, and other content for toggling -->
						<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
							<ul class="nav navbar-nav">
        			<li><%= link_to "Home", root_path %></li>
        			<li><%= link_to "Help", '#' %></li>
        			<% if logged_in? %>
          			<li><%= link_to "Users", '#' %></li>
          			<li class="dropdown">
            		<a href="#" class="dropdown-toggle" data-toggle="dropdown">
 								Account <b class="caret"></b>
            		</a>
            		<ul class="dropdown-menu">
              		<% if current_user.admin? %>
                		<li><%= link_to "Admin Panel", current_user %></li>       
              		<% else %> 
                		<li><%= link_to "Profile", current_user %></li>
              		<% end %>
              		<li><%= link_to "Settings", edit_user_path(current_user) %></li>
              		<li class="divider"></li>
              		<li>
                		<%= link_to "Log out", logout_path, method: "delete" %>
              		</li>
            		</ul>
          		</li>
        		<% else %>
          		<li><%= link_to "Log in", login_path %></li>
        		<% end %>
						</ul>
					</div>
				</nav>
			</div>
		</div>
	</div>
</div>
