<%= simple_form_for(@report) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :summary %>
    <%= f.input :publication_date %>
    <%= f.input :press_release %>
    <%= f.input :main_report %>
    <%= f.input :charts %>
    <%= f.input :vid %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
