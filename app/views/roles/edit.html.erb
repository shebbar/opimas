<% provide(:title, 'New Role') %>
<div class="page_title">
  <h1>New Role</h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(@role) do |f| %>
      <%= f.error_notification %>

      <%= f.input :name %>

      <%= f.input :description %>

      <%= f.submit "Save Changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= link_to 'Back', roles_path %> | <%= link_to 'New Role', new_role_path %>
