<% provide(:title, 'New Role') %>
<h1>New Role</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(@role) do |f| %>
      <%= f.error_notification %>

      <%= f.input :name %>

      <%= f.input :description %>

      <%= f.association :employees %>

      <%= f.submit "Save Changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<%= link_to 'Back', roles_path %>
