<% provide(:title, 'Role Details') %>
<h1>Role Details</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
<p>
  <strong>Name:</strong>
  <%= @role.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @role.description %>
</p>
  </div>
</div>
<%= link_to 'Edit', edit_role_path(@role) %> |
<%= link_to 'Back', roles_path %> |
<%= link_to 'New Role', new_role_path %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>List of Associated Employees</h1>
    <% @roleusers = @role.employees %>
    <% @roleusers.each do |roleuser| %>
      <p><%= roleuser.user.name %></p>
    <% end %>
  </div>
</div>
